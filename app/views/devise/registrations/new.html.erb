<body class="bg-gradient-primary">

  <div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
              </div>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

                  <div class="form-group">
                    <%= f.label :cpf %><br />
                    <%= f.text_field  :cpf, class: ["form-control", "form-control-user"] %>
                  </div>

                  <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field  :email, class: ["form-control", "form-control-user"]%>
                  </div>

                  <div class="form-group">
                      <%= f.label :kind %>
                      <%= f.select :kind, ['ADM', 'Driver'], {},{class: ["custom-select", "custom-select-sm", "form-control", "form-control-sm"]}%>
                  </div>

                  <div class="form-group">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password", class: ["form-control", "form-control-user"] %>
                  </div>

                  <div class="form-group">
                    <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: ["form-control", "form-control-user"] %>
                  </div>
                  <br>
                  
                  <div class="actions form-group">
                    <%= f.submit "Register Account",  class: ["btn", "btn-primary", "btn-user", "btn-block"] %>
                  </div>

                  <%= render "devise/shared/error_messages", resource: resource %>
                <% end %>
              <hr>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>



