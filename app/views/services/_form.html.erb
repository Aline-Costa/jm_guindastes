<%= form_with(model: service, local: true) do |form| %>
  <% if service.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(service.errors.count, "error") %> prohibited this service from being saved:</h2>

      <ul>
        <% service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :status %>
    <%= form.text_field :status %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :data %>
    <%= form.datetime_select :data %>
  </div>

   <%= form.fields_for :address do |address_fields| %>
    <div class="field">
      <%= form.label :street %>
      <%= form.text_field :street %>
    </div>

    <div class="field">
      <%= form.label :neighborhood %>
      <%= form.text_field :neighborhood %>
    </div>

    <div class="field">
      <%= form.label :zipcode %>
      <%= form.text_field :zipcode %>
    </div>

    <div class="field">
      <%= form.label :number %>
      <%= form.text_field :number %>
    </div>

    <div class="field">
      <%= form.label :city %>
      <%= form.text_field :city %>
    </div>
  <%end%>
  
   <div class="field">
    <%= form.label :driver_id %>
    <%= form.collection_select(:driver_id, @driver_drivers_for_select, :id, :name)%>
  </div>

  <div class="field">
    <%= form.label :client_id %>
    <%= form.collection_select(:client_id, @client_clients_for_select, :id, :name)%>
  </div>

  <div class="field">
    <%= form.label :vehicle_id %>
    <%= form.collection_select(:vehicle_id, @vehicle_vehicles_for_select, :id, :board)%>
